<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.orelogo.cottonkeyboards.SummaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/loading_summary"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"/>


        <LinearLayout
            android:id="@+id/resultsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/totalRevenueLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/total_revenue"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"/>

            <TextView
                android:id="@+id/totalRevenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAlignment="textEnd"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/keyboardsSoldLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingTop="80dp"
                android:text="@string/ac_keyboards_sold"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"/>

            <TextView
                android:id="@+id/keyboardsSold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAlignment="textEnd"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/refersh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/refresh"/>


    </LinearLayout>

</RelativeLayout>
